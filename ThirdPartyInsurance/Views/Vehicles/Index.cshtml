@model IEnumerable<ThirdPartyInsurance.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Vehicles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                Make
            </th>
            <th>
                Model
            </th>

            <th>
               Body Type
            </th>

             <th>
              Premium
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model.Make.Name )
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Model.Name )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType.Name)
            </td>

             <td>
                @Html.DisplayFor(modelItem => item.BodyType.Premium)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
