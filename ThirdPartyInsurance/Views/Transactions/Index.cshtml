@model IEnumerable<ThirdPartyInsurance.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Transactions</h1>

<p>
    <div class="col-12 text-end">
        <a asp-action="Create" class="btn btn-primary">Create New Transaction</a>
    </div>
   
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleMake)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Premium)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @{
                        if (!item.Paid){   
                            <a class="btn btn-outline-info" asp-action="Payment" asp-route-id="@item.Id">Pay Now</a>
                            Html.Raw("|");
                        }
                       } 
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>
